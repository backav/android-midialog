<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/constraintLayout">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度"
        android:id="@+id/btnProgress"
        tools:layout_editor_absoluteWidth="88dp"
        tools:layout_editor_absoluteHeight="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文本输入"
        android:id="@+id/btnInput"
        tools:layout_editor_absoluteWidth="88dp"
        tools:layout_editor_absoluteHeight="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnSelect"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/btnSelect3"
        app:layout_constraintRight_toRightOf="@+id/btnSelect"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:id="@+id/btnGender"
        tools:layout_editor_absoluteWidth="88dp"
        tools:layout_editor_absoluteHeight="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnConfirm"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirm"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnConfirm"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:id="@+id/btnConfirm"
        tools:layout_editor_absoluteWidth="88dp"
        tools:layout_editor_absoluteHeight="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnProgress"
        android:layout_marginStart="172dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnAlert"
        android:layout_marginEnd="173dp"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:id="@+id/btnSelect3"
        tools:layout_editor_absoluteWidth="88dp"
        tools:layout_editor_absoluteHeight="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnGender"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/btnGender"
        android:layout_marginTop="32dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnGender"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择"
        android:id="@+id/btnSelect"
        tools:layout_editor_absoluteWidth="88dp"
        tools:layout_editor_absoluteHeight="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnProgress"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/btnGender"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnProgress"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnGender"
        tools:layout_constraintBottom_creator="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:id="@+id/btnAlert"
        tools:layout_editor_absoluteWidth="88dp"
        tools:layout_editor_absoluteHeight="48dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2列选择框"
        android:id="@+id/btnSelect2"
        tools:layout_editor_absoluteWidth="88dp"
        tools:layout_editor_absoluteHeight="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnAlert"
        app:layout_constraintTop_toTopOf="@+id/btnGender"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnAlert"
        app:layout_constraintBottom_toBottomOf="@+id/btnGender"
        tools:layout_constraintBottom_creator="1" />

</android.support.constraint.ConstraintLayout>
